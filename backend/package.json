{
  "name": "backend",
  "description": "Node project to serve the information of the post-it application",
  "version": "1.0.0",
  "author": "Tanvir Hossain",
  "engines": {
    "node": ">=16.17.0",
    "pnpm": ">=8.6.2"
  },
  "main": "build/main.js",
  "scripts": {
    "start": "pnpm clean && pnpm build && node build/main.js",
    "start:tsc": "tsc && node build/main.js",
    "dev": "ts-node-dev -r tsconfig-paths/register src/main.ts",
    "clean": "npx tsc --build --clean",
    "build": "babel src --extensions \".ts,.js\" --out-dir build --copy-files",
    "build:tsc": "pnpm clean && pnpm tsc",
    "lint": "ts-standard",
    "lint:fix": "ts-standard --fix",
    "vercel-build": "echo \"To avoid execution of build...\""
  },
  "devDependencies": {
    "@babel/cli": "7.22.5",
    "@babel/core": "7.22.5",
    "@babel/node": "7.22.5",
    "@babel/preset-env": "7.22.5",
    "@babel/preset-typescript": "7.22.5",
    "@types/cors": "2.8.13",
    "@types/express": "4.17.17",
    "@types/node": "20.3.1",
    "babel-plugin-module-resolver": "5.0.0",
    "ts-node-dev": "2.0.0",
    "ts-standard": "12.0.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.1.3"
  },
  "dependencies": {
    "cors": "2.8.5",
    "express": "4.18.2",
    "mongoose": "7.3.1",
    "ts-dotenv": "0.9.1"
  }
}